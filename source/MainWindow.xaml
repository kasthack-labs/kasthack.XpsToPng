        <TextBox Height="23" Margin="25,89,121,0" Name="TxtDestination" VerticalAlignment="Top" Text="B:\xps\out" />
        <Button Content="..." Height="23" Margin="0,88,26,0" Name="BtnBrowseDestination" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75" Click="BtnBrowseDestination_Click" />
        <Button Content="Convert" Margin="25,138,26,22" Name="BtnConvert" Click="BtnConvertClick" />
        <Label Content="Source XPS" HorizontalAlignment="Left" Margin="25,10,0,0" VerticalAlignment="Top" Width="80"/>
        <Label Content="Output directory" HorizontalAlignment="Left" Margin="25,65,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
